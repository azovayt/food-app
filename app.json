{
  "expo": {
    "name": "food-app",
    "slug": "food-app",
    "scheme": "food-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/food-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/food-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#fff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/food-logo.png",
        "backgroundColor": "#1d4ed8"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/food-logo.png",
      "bundler": "metro"
    },
    "plugins": ["expo-router", "expo-font"]
  }
}
